@import 'jeet'
*,
*:after,
*:before
    margin 0
    padding 0
    box-sizing border-box
body 
    background-image: url("../img/background-header.jpg")
    background-position: top center
    background-repeat: repeat-x
    font-family: 'Montserrat', sans-serif;
.img-responsive
    display block
    max-width 100%
    height auto
.text-center 
    text-align: center
.float-left
    float: left
.float-right
    float: right
.hide
    display: none 

.alert
    width 100%
    padding 20px
    text-align center
    border-radius 5px
    font-family RobotoMedium
    font-size 1em
    font-weight normal
.alert-success
    background-color #dff0d8
    color #3c763d
.alert-danger
    background-color #f2dede
    color #a94442
.loading
    display none

input.error , textarea.error
    border solid 1px #E42020
label.error
    font-family RobotoMedium
    font-size 0.7em
    font-weight normal
    padding-left 10px
    margin-bottom 5px
    display block
    width 100%
    text-align left
    color #E42020


/******************************
HEADER
******************************/
.logo-devir
    padding: 15px 15px 10px 15px
    display inline-block
    img
        width 100px
header 
    width: 100%
    margin-top: 25px
    img 
        margin: 0 auto;
        width: 30%
nav 
    padding: 60px
    +below(965px)
        padding: 10px
    a
        margin: 10px 45px
        display: inline-block
        text-transform: uppercase
        text-decoration: none
        color: #298a34
        font-family: 'Montserrat', sans-serif;
        font-weight: 300;
        font-size: 24px;
        &:hover
            color: #deb763
/******************************
ELFO
******************************/
.elfo
    width: 965px
    +below(965px)
        width: 100%
        padding 20px
        text-align: center
    padding-left: 88px
    margin: 0 auto
    p
        clear: both
        font-size: 30px
        width: 80%
        +below(965px)
            width: 100%
    .elfo-txt
        float left
        margin-top: 20%
        +below(965px)
            width: 100%
            margin-bottom: 50px
            margin-top: 10px
        h3 
            font-size: 41px
            line-height: 40px
        h4
            font-size: 35px
        h5 
            font-size: 24px
            font-weight: 100
/******************************
PROGRAMACAO
******************************/
.programacao
    margin: 100px 0 0 0
    padding: 60px 0
    text-align: center
    color: #fff
    background-image: url("../img/background-green.jpg")
    text-transform: uppercase
    box-shadow: 0px 2px 20px 2px rgba(0,0,0, 0.5);
    position: relative
    p
        font-size: 35px
        margin: 20px 0
        +below(965px)
            font-size: 28px
    h2 
        font-weight: 100
        font-size: 40px
        +below(965px)
            font-size: 30px
    a
        color: #ffffff
        border: solid 1px #ffffff
        padding: 5px 10px
        font-size: 35px
        font-weight: 100
        text-decoration: none
        margin-top: 100px
        display: inline-block
/******************************
CADASTRO
******************************/
.btn-cadastro
    color: #117d1d
    border: solid 1px #117d1d
    padding: 10px 15px
    font-size: 30px
    font-weight: 100
    text-decoration: none
    margin: 100px 0
    display: inline-block
    &:hover
        background: #117d1d
        color: #fff
.cadastro
    text-align: center
    h2 
        color: #117d1d
        font-size: 45px
        text-transform: uppercase
        +below(965px)
            font-size: 30px
    input 
        background-color: #117d1d
        color: #ffffff
        border-radius: 5px
        display: list-item
        margin: 10px auto
        border: none 
        padding: 10px
        text-align: center
        font-size: 30px
        +below(401px)
            width: 90%
        &::-webkit-input-placeholder
            color: #e0dbdb
        input:focus::-webkit-input-placeholder 
            color: #fff
    button
        font-size: 30px
        color: #117d1d
        border-radius: 5px
        border solid 1px #117d1d
        padding: 10px
        cursor: pointer
        margin-top: 20px
        margin-bottom: 50px
        width: 315px
        &:hover
            background-color: #deb763
            color: #fff
/******************************
MAPA
******************************/
.mapa
    text-align: center
    margin-top: 50px
    width: 600px
    +below(600px)
        width: 100%
    margin 0 auto
.google-maps 
        position: relative;
        padding-bottom: 75%; 
        height: 0;
        overflow: hidden;
.google-maps iframe 
        position: absolute;
        top: 0;
        left: 0;
        width: 100% !important;
        height: 100% !important;
/******************************
FOOTER
******************************/
footer
    text-align: center
    font-size: 28px
    font-weight: 300
    margin-top: 30px
    text-transform: uppercase
    img 
        margin-top: 20px

.background-footer
    background-image: url("../img/background-footer.jpg")
    background-position: bottom center
    padding-top: 100px